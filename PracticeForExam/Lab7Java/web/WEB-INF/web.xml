<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Authentification.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlett</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>Authentification.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/RegisterServlett</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Authentification.Logout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlett</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentCtrl</servlet-name>
        <servlet-class>Operations.StudentCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentCtrl</servlet-name>
        <url-pattern>/StudentCtrll</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CoursesCtrl</servlet-name>
        <servlet-class>Operations.CoursesCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CoursesCtrl</servlet-name>
        <url-pattern>/CoursesCtrll</url-pattern>
    </servlet-mapping>






</web-app>